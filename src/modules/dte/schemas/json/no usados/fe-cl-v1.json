          "tipoDte",
          "tipoGeneracion",
          "numeroDocumento",
          "fechaGeneracion",
          "ventaNoSuj",
          "ventaExenta",
          "ventaGravada",
          "exportaciones",
          "tributos",
          "ivaItem",
          "obsItem"
        ]
      },
      "minItems": 1,
      "maxItems": 500
    },
