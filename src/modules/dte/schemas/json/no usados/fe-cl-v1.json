              }
            },
            "additionalProperties" : false,
            "required" : [
              "codigo",
              "descripcion",
              "valor"
            ]
          }
        },
        "montoTotalOperacion": {
          "type": "number",
          "description": "Monto Total de la Operación",
          "exclusiveMaximum": 100000000000,
          "exclusiveMinimum": -100000000000,
          "multipleOf": 0.01
        },
        "ivaPerci": {
          "type": "number",
          "description": "IVA Percibido liquidado",
          "exclusiveMaximum": 100000000000,
          "exclusiveMinimum": -100000000000,
          "multipleOf": 0.01
        },
        "total": {
          "type": "number",
          "description": "Total a Pagar",
          "exclusiveMaximum": 100000000000,
          "exclusiveMinimum": -100000000000,
          "multipleOf": 0.01
        },
        "totalLetras": {
          "type": "string",
          "description": "Total en Letras",
          "maxLength": 200
        },
        "condicionOperacion": {
          "type": "number",
          "description": "Condición de la Operación",
          "enum": [
            1,
            2,
            3
          ]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "total": {
                "const": 0
              }
            }
          },
          "then": {
            "properties": {
              "condicionOperacion": {
                "enum": [
                  1
                ]
              }
            }
          }
        }
      ],
      "additionalProperties": false,
      "required": [
        "totalNoSuj",
