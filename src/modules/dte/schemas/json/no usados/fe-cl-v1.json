    "cuerpoDocumento": {
      "type": "array",
      "description": "Cuerpo del Documento",
      "items": {
        "type": "object",
        "properties": {
          "numItem": {
            "type": "integer",
            "description": "N° de ítem",
            "minimum": 1,
            "maximum": 500
          },
          "tipoDte": {
            "type": "string",
            "description": "Tipo de ítem",
            "enum": [
              "01",
              "03",
              "05",
              "06",
              "11"
            ]
          },
          "tipoGeneracion": {
            "type": "integer",
            "description": "Tipo de generación del documento",
            "enum": [
              1,
              2
            ]
          },
          "numeroDocumento": {
            "description": "Número de documento relacionado",
            "type": "string",
            "minLength": 1,
            "maxLength": 36
          },
          "fechaGeneracion": {
            "type": "string",
            "description": "Fecha de generación del  relacionado",
            "format": "date"
          },
          "ventaNoSuj": {
            "type": "number",
            "description": "Ventas no Sujetas",
            "exclusiveMaximum": 100000000000,
            "exclusiveMinimum": -100000000000,
            "multipleOf": 0.00000001
          },
          "ventaExenta": {
            "type": "number",
            "description": "Ventas Exentas",
            "exclusiveMaximum": 100000000000,
            "exclusiveMinimum": -100000000000,
            "multipleOf": 0.00000001
          },
          "ventaGravada": {
            "type": "number",
            "description": "Ventas Gravadas",
            "exclusiveMaximum": 100000000000,
            "exclusiveMinimum": -100000000000,
            "multipleOf": 0.00000001
          },
          "exportaciones": {
            "type": "number",
            "description": "Ventas Gravadas",
            "exclusiveMaximum": 100000000000,
            "exclusiveMinimum": -100000000000,
            "multipleOf": 0.00000001
          },
          "tributos": {
            "description": "Tributo sujeto a cálculo de IVA",
            "type": [
              "array",
              "null"
            ],
            "items": {
              "type": "string",
              "maxLength": 2,
              "minLength": 2,
              "enum": [
                null,
                "20",
                "C3",
                "59",
                "71",
                "D1",
                "C8",
                "D5",
                "D4"
              ]
            },
            "uniqueItems": true
          },
          "ivaItem": {
            "type": "number",
            "description": "IVA por ítem",
            "exclusiveMaximum": 100000000000,
            "exclusiveMinimum": -100000000000,
            "multipleOf": 0.00000001
          },
          "obsItem": {
            "type": "string",
            "description": "Observaciones por ítem",
            "maxLength": 3000,
            "minLength": 3
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "tipoGeneracion": {
                  "const": 1
                }
              }
            },
            "then": {
              "properties": {
                "numeroDocumento": {
                  "type": "string",
                  "pattern": "^[A-Z0-9]{1,20}$"
                }
              }
            },
            "else": {
              "properties": {
                "numeroDocumento": {
                  "pattern": "^[A-F0-9]{8}-[A-F0-9]{4}-[A-F0-9]{4}-[A-F0-9]{4}-[A-F0-9]{12}$"
                }
              }
            }
          }
        ],
        "additionalProperties": false,
        "required": [
