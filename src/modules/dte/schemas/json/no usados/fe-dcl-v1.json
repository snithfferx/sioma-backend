{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Documento Contable de Liquidación Electrónica v1",
    "type": "object",
    "properties": {
        "identificacion": {
            "description": "Identificación",
            "type": "object",
            "properties": {
                "version": {
                    "type": "integer",
                    "description": "Versión",
                    "const": 1
                },
                "ambiente": {
                    "type": "string",
                    "description": "Ambiente de destino",
                    "enum": [
                        "00",
                        "01"
                    ]
                },
                "tipoDte": {
                    "type": "string",
                    "description": "Tipo de Documento",
                    "const": "09"
                },
                "numeroControl": {
                    "type": "string",
                    "description": "Número de Control",
                    "maxLength": 31,
                    "minLength": 31,
                    "pattern": "^DTE-09-[A-Z0-9]{8}-[0-9]{15}$"
                },
                "codigoGeneracion": {
                    "type": "string",
                    "description": "Código de Generación",
                    "maxLength": 36,
                    "minLength": 36,
                    "pattern": "^[A-F0-9]{8}-[A-F0-9]{4}-[A-F0-9]{4}-[A-F0-9]{4}-[A-F0-9]{12}$"
                },
                "tipoModelo": {
                    "type": "number",
                    "description": "Modelo de Facturación",
                    "const": 1
                },
                "tipoOperacion": {
                    "type": "integer",
                    "description": "Tipo de Transmisión",
                    "const": 1
                },
                "fecEmi": {
                    "type": "string",
                    "description": "Fecha de Generación",
                    "format": "date"
                },
                "horEmi": {
                    "type": "string",
                    "description": "Hora de Generación",
                    "pattern": "^(0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]?$"
                },
                "tipoMoneda": {
                    "type": "string",
                    "description": "Tipo de Moneda",
                    "enum": [
                        "USD"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "version",
                "ambiente",
                "tipoDte",
                "numeroControl",
                "codigoGeneracion",
                "tipoModelo",
                "tipoOperacion",
                "fecEmi",
                "horEmi",
                "tipoMoneda"
            ]
        },
        "emisor": {
            "type": "object",
            "description": "Emisor",
            "properties": {
                "nit": {
                    "description": "NIT (Emisor)",
                    "type": "string",
                    "pattern": "^([0-9]{14}|[0-9]{9})$"
                },
                "nrc": {
                    "description": "NRC (Emisor)",
                    "type": "string",
                    "pattern": "^[0-9]{1,8}$"
                },
