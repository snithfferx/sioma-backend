                            "pattern": "^0[1-9]|1[0-4]$"
                        },
                        "municipio": {
                            "type": "string",
                            "description": "Dirección Municipio (Emisor)",
                            "pattern": "^[0-9]{2}$"
                        },
                        "complemento": {
                            "type": "string",
                            "description": "Dirección complemento (Emisor)",
                            "maxLength": 200,
                            "minLength": 5
                        }
                    },
                    "allOf": [
                        {
                            "if": {
                                "properties": {
                                    "departamento": {
                                        "const": "01"
                                    }
                                }
                            },
                            "then": {
                                "properties": {
                                    "municipio": {
                                        "pattern": "^0[1-9]|1[0-2]$"
                                    }
                                }
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "departamento": {
                                        "enum": [
                                            "02",
                                            "10"
                                        ]
