                    "numItem": {
                        "type": "integer",
                        "description": "N° de ítem",
                        "minimum": 1,
                        "maximum": 500
                    },
                    "tipoDte": {
                        "type": "string",
                        "description": "Tipo de Documento Tributario Relacionado",
                        "enum": [
                            "14",
                            "03",
                            "01"
                        ]
                    },
                    "tipoDoc": {
                        "type": "integer",
                        "description": "Tipo de generación del documento",
                        "enum": [
                            1,
                            2
                        ]
                    },
                    "numDocumento": {
                        "description": "Número de documento relacionado",
                        "type": "string"
                    },
                    "fechaEmision": {
                        "description": "Fecha de generación del  relacionado",
                        "type": "string",
                        "format": "date"
                    },
                    "montoSujetoGrav": {
                        "type": "number",
                        "description": "Monto Sujeto a retención",
                        "minimum": 1,
                        "exclusiveMaximum": 100000000000,
                        "multipleOf": 0.01
                    },
                    "codigoRetencionMH": {
                        "type": "string",
                        "description": "Código retención MH",
                        "enum": [
                            "22",
                            "C4",
                            "C9"
                        ]
                    },
                    "ivaRetenido": {
                        "type": "number",
                        "description": "IVA Retenido",
                        "minimum": 0.01,
                        "exclusiveMaximum": 100000000000,
                        "multipleOf": 0.01
                    },
                    "descripcion": {
                        "type": "string",
                        "description": "Descripción",
                        "maxLength": 1000
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "tipoDoc": {
                                    "const": 1
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "codGeneracion": {
                                    "pattern": "^[a-zA-Z0-9]{1,20}$"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "tipoDoc": {
                                    "const": 2
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "codGeneracion": {
                                    "pattern": "^[A-F0-9]{8}-[A-F0-9]{4}-[A-F0-9]{4}-[A-F0-9]{4}-[A-F0-9]{12}$"
                                }
                            }
                        }
