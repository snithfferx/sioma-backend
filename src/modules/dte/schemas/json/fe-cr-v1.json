        "identificacion": {
            "description": "Identificación",
            "type": "object",
            "properties": {
                "version": {
                    "type": "integer",
                    "description": "Versión",
                    "const": 1
                },
                "ambiente": {
                    "type": "string",
                    "description": "Ambiente de destino",
                    "minLength": 2,
                    "maxLength": 2,
                    "enum": [
                        "00",
                        "01"
                    ]
                },
                "tipoDte": {
                    "type": "string",
                    "description": "Tipo de Documento",
                    "const": "07"
                },
                "numeroControl": {
                    "type": "string",
                    "description": "Número de Control",
                    "minLength": 31,
                    "maxLength": 31,
                    "pattern": "^DTE-07-[A-Z0-9]{8}-[0-9]{15}$"
                },
                "codigoGeneracion": {
                    "type": "string",
                    "description": "Código de Generación",
                    "minLength": 36,
                    "maxLength": 36,
                    "pattern": "^[A-F0-9]{8}-[A-F0-9]{4}-[A-F0-9]{4}-[A-F0-9]{4}-[A-F0-9]{12}$"
                },
                "tipoModelo": {
                    "type": "number",
                    "description": "Modelo de Facturación",
                    "const": 1
                },
                "tipoOperacion": {
                    "type": "integer",
                    "description": "Tipo de Transmisión",
                    "const": 1
                },
                "tipoContingencia": {
                    "description": "Tipo de Contingencia",
                    "type": "null"
                },
                "motivoContin": {
                    "description": "Motivo de Contingencia",
                    "type": "null"
                },
                "fecEmi": {
                    "type": "string",
                    "description": "Fecha de Generación",
                    "format": "date"
                },
                "horEmi": {
                    "type": "string",
                    "description": "Hora de Generación",
                    "pattern": "^(0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]?$"
                },
                "tipoMoneda": {
                    "type": "string",
                    "description": "Tipo de Moneda",
                    "enum": [
                        "USD"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "version",
                "ambiente",
                "tipoDte",
                "numeroControl",
                "codigoGeneracion",
                "tipoModelo",
                "tipoOperacion",
                "tipoContingencia",
                "motivoContin",
                "fecEmi",
                "horEmi",
                "tipoMoneda"
            ]
